<%- include("partials/header"); -%>
  <div class="row">
    <div class="col-lg">
      <h1>Home 
      </h1>
      <p>
        <%= startingContent %>
      </p>


    </div>
  </div>
  <div class="row flex-row">

    <% posts.forEach(function(post){ %>
      <div class="col-lg-3">
        <h1>
          <%=post.title%>
        </h1>
        <p>
          <%=post.content.substring(0, 100) + " ..." %>
            <a href="/posts/<%=post._id%>">Read More</a>
        </p>

      </div>
      <% }) %>

  </div>



  <%- include("partials/footer"); -%>